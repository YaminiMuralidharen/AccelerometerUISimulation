<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#fff"
    tools:context="com.cmpe277.yaminimuralidharen.accelerometeruisimulation.MainActivity">

    <TextView
        android:id="@+id/str_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer App"
        android:textColor="#000000"
        android:layout_centerHorizontal="false"
        android:textSize="25sp"
        android:paddingLeft="20dp"
        />
    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/str_header"
        />

    <TextView
        android:id="@+id/X_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X Value"
        android:layout_below="@+id/space"
        android:textColor="#000000"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        />
    <EditText
        android:id="@+id/x_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/str_header"
        android:layout_toRightOf="@+id/X_txtview"

        />
    <TextView
        android:id="@+id/Y_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y Value"
        android:layout_below="@+id/X_txtview"
        android:textColor="#000000"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/y_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/X_txtview"
        android:layout_toRightOf="@+id/Y_txtview"
        android:layout_marginTop="15dp"

        />
    <TextView
        android:id="@+id/Z_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z Value"
        android:layout_below="@+id/Y_txtview"
        android:textColor="#000000"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/z_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Y_txtview"
        android:layout_toRightOf="@+id/Z_txtview"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/simulation_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulation Count"
        android:layout_below="@+id/Z_txtview"
        android:textColor="#000000"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/simulation_ct_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Z_txtview"
        android:layout_toRightOf="@+id/simulation_txtview"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/generate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:textColor="#fff"
        android:layout_below="@+id/simulation_txtview"
        android:background="#000000"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:onClick="GenerateSimulation"
        />
    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="#fff"
        android:background="#000000"
        android:layout_below="@+id/simulation_txtview"
        android:layout_toRightOf="@+id/generate_button"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:onClick="cancelSimulation"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/cancel_button"
        >
        <TextView
            android:id="@+id/log_status_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:textColor="#000"
            android:padding="4dip"
            android:typeface="monospace"
            />
    </ScrollView>
</RelativeLayout>